---
// src/components/BlogList.astro
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';

interface Props {
  posts: CollectionEntry<'blog'>[];
}

const { posts } = Astro.props;

function formatDate(date: Date) {
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
  });
}
---

<div class="grid grid-cols-1 md:grid-cols-2 gap-12 max-w-6xl mx-auto">
  {posts.map((post, index) => (
    <article class:list={[
      "group relative",
      index % 3 === 0 && "md:col-span-2 md:grid md:grid-cols-2 md:gap-8"
    ]}>
      {post.data.image && (
        <div class:list={[
          "aspect-[3/2] mb-4 overflow-hidden",
          index % 3 === 0 ? "md:mb-0" : ""
        ]}>
          <Image 
            src={post.data.image} 
            alt={post.data.title}
            class="object-cover w-full h-full transition-transform duration-500 group-hover:scale-105"
          />
        </div>
      )}
      <div class="space-y-4">
        <div class="font-mono text-sm text-stone-500">
          {formatDate(post.data.publishDate)}
          {post.data.category && (
            <span class="ml-4 px-2 py-1 bg-stone-100">{post.data.category}</span>
          )}
        </div>
        <h2 class="text-2xl font-semibold leading-tight">
          <a href={`/blog/${post.slug}`} class="hover:text-stone-600 transition-colors">
            {post.data.title}
          </a>
        </h2>
        <p class="text-stone-600 line-clamp-3">{post.data.excerpt}</p>
        <div class="pt-2">
          <a 
            href={`/blog/${post.slug}`} 
            class="inline-flex items-center font-mono text-sm hover:text-stone-600 transition-colors"
          >
            Read essay
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
            </svg>
          </a>
        </div>
      </div>
    </article>
  ))}
</div>