---
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';
import { cleanWikiLink, slugify } from '../utils/path';
import { getFeaturedTopics, getTopicConnections } from '../utils/topics';
import ActivityHeatmap from '../components/ActivityHeatmap.astro';
import TopicNetwork from '../components/TopicNetwork';

const essays = (await getCollection('essays'))
  .sort((a, b) => b.data.date.getTime() - a.data.date.getTime())
  .slice(0, 4);
const allEssays = await getCollection('essays');
const allBooks = await getCollection('books');

const featuredTopics = await getFeaturedTopics(6);
const topicConnections = await getTopicConnections();

const topics = [...new Set([
  ...allEssays.flatMap(essay => 
    essay.data.topics.map(topic => {
      const match = topic.match(/\[([^\]]+)\]\(([^)]+)\)/);
      return match ? match[1] : topic;
    })
  ),
  ...allBooks.flatMap(book => 
    book.data.topics?.map(topic => {
      const match = topic.match(/\[([^\]]+)\]\(([^)]+)\)/);
      return match ? cleanWikiLink(match[1]) : cleanWikiLink(topic);
    }) || []
  )
])].sort();

const today = new Date().toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
---

<BaseLayout title="In Two Minds">
  <!-- Main container -->
  <div class="max-w-5xl mx-auto px-4 md:px-8">
    <!-- Hero section -->
    <section class="mt-12 md:mt-24 mb-32">
      <!-- Issue number and date -->
      <div class="mb-8">
        <div class="inline-block border-2 border-black dark:border-gray-700 px-4 py-2 rotate-[-2deg]">
          <span class="font-mono text-xs tracking-[0.2em]">VOL. II • {today}</span>
        </div>
      </div>
      
      <!-- Title and subtitle -->
      <div class="relative">
        <h1 class="font-serif text-6xl md:text-7xl lg:text-8xl mb-8 leading-[0.85] tracking-[-0.02em]">
          <span class="block">IN TWO</span>
          <span class="block ml-[-0.05em]">MINDS</span>
        </h1>
        <div class="absolute top-0 right-0 w-16 h-16 border-2 border-black dark:border-gray-700 rotate-45"></div>
      </div>
      <div class="max-w-xl ml-[-0.5em]">
        <p class="font-mono text-sm leading-relaxed border-l-4 border-black dark:border-gray-700 pl-4 italic">
          A digital garden exploring philosophy, ethics, and systems thinking through multiple lenses and personas.
        </p>
      </div>
    </section>

    <!-- Featured Essays -->
    <section class="mb-32">
      <div class="relative">
        <div class="absolute top-0 left-0 w-full h-full border-2 border-black dark:border-gray-700 rotate-[-1deg]"></div>
        <div class="relative bg-white dark:bg-gray-900 p-8">
          <div class="grid md:grid-cols-2 gap-12 md:gap-16">
            {essays.map((essay, index) => (
              <article class="group">
                <a href={`/essays/${slugify(essay.id)}`} 
                   class="block">
                  <div class="font-mono text-xs mb-4 flex items-center">
                    <span class="opacity-50 mr-4">{String(index + 1).padStart(2, '0')}</span>
                    <span class="opacity-70">{essay.data.date.toLocaleDateString('en-AU', {
                      year: 'numeric',
                      month: 'long',
                      day: 'numeric'
                    })}</span>
                  </div>
                  <h2 class="font-serif text-2xl md:text-3xl mb-4 leading-tight group-hover:translate-x-2 transition-all">
                    {essay.data.title}
                  </h2>
                  <div class="font-mono text-xs opacity-70 mb-4">By {essay.data.persona}</div>
                  <p class="text-sm opacity-70 leading-relaxed">{essay.data.summary}</p>
                </a>
              </article>
            ))}
          </div>
        </div>
      </div>
    </section>

    <!-- Reading Highlights -->
    <section class="mb-32">
      <div class="relative">
        <div class="absolute top-0 left-0 w-full h-full border-2 border-black dark:border-gray-700 rotate-1"></div>
        <div class="relative bg-white dark:bg-gray-900 p-8">
          <div class="max-w-2xl mx-auto">
            <h2 class="font-mono text-xs uppercase tracking-[0.3em] mb-6">Reading Highlights</h2>
            <a href="https://readings.intwominds.blog" class="group block">
              <h3 class="font-serif text-3xl md:text-4xl mb-4 leading-tight group-hover:translate-x-2 transition-all rotate-[-1deg]">
                Highlights from my reading journey
              </h3>
              <p class="text-sm opacity-70 leading-relaxed italic">A curated collection of highlights and notes from my reading journey</p>
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Topics and Quote Grid -->
    <div class="grid md:grid-cols-2 gap-16 md:gap-24 mb-32">
      <!-- Featured Topics -->
      <section>
        <div class="flex justify-between items-center mb-8">
          <h2 class="font-mono text-xs uppercase tracking-[0.3em]">Featured Topics</h2>
          <a href="/topics" class="font-mono text-xs opacity-70 hover:opacity-100 transition-opacity">
            View All →
          </a>
        </div>
        
        <div class="grid grid-cols-1 gap-4">
          {featuredTopics.map(topic => (
            <a href={`/topics/${topic.toLowerCase()}`} 
               class="group flex items-center border-b-2 border-black dark:border-gray-700 pb-3 last:border-b-0">
              <span class="font-mono text-sm opacity-70 group-hover:opacity-100 transition-opacity truncate">
                <span class="inline-block w-4 mr-2">→</span>
                {topic}
              </span>
            </a>
          ))}
        </div>
      </section>

      <!-- Quote -->
      <section>
        <h2 class="font-mono text-xs uppercase tracking-[0.3em] mb-8">Featured Quote</h2>
        <blockquote class="font-serif text-xl md:text-2xl italic leading-relaxed rotate-[-1deg]">
          "The philosopher is not a citizen of any community of ideas. That is what makes him a philosopher."
          <footer class="text-sm mt-6 not-italic opacity-70">
            — Ludwig Wittgenstein
          </footer>
        </blockquote>
      </section>
    </div>

    <!-- About Section -->
    <section class="mb-32">
      <div class="relative">
        <div class="absolute top-0 left-0 w-full h-full border-2 border-black dark:border-gray-700 rotate-[-2deg]"></div>
        <div class="relative bg-white dark:bg-gray-900 p-8">
          <div class="max-w-2xl">
            <h2 class="font-mono text-xs uppercase tracking-[0.3em] mb-8">About this Garden</h2>
            <p class="text-base leading-relaxed mb-8 italic">
              Here, I take on different personas and explore trains of thought, perhaps playing devil's advocate, providing extracts from books and exploring their ideas through different lenses. My goal is to create a space where thoughts can accumulate and develop over time.
            </p>
            <div class="font-mono text-sm">
              <div class="mb-6 opacity-70">Notable inspirations:</div>
              <ul class="grid grid-cols-2 gap-6">
                <li>
                  <a href="https://notes.andymatuschak.org" class="hover:underline opacity-70 hover:opacity-100 transition-opacity">
                    <span class="mr-2">→</span>Andy Matuschak's Notes
                  </a>
                </li>
                <li>
                  <a href="https://gwern.net" class="hover:underline opacity-70 hover:opacity-100 transition-opacity">
                    <span class="mr-2">→</span>Gwern
                  </a>
                </li>
                <li>
                  <a href="https://lesswrong.com" class="hover:underline opacity-70 hover:opacity-100 transition-opacity">
                    <span class="mr-2">→</span>Less Wrong
                  </a>
                </li>
                <li>
                  <a href="https://100r.co" class="hover:underline opacity-70 hover:opacity-100 transition-opacity">
                    <span class="mr-2">→</span>100r
                  </a>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Activity Heatmap -->
    <section class="mb-32">
      <div class="relative">
        <div class="absolute top-0 left-0 w-full h-full border-2 border-black dark:border-gray-700 rotate-1"></div>
        <div class="relative bg-white dark:bg-gray-900 p-8">
          <ActivityHeatmap essays={allEssays} books={allBooks} />
        </div>
      </div>
    </section>

    <!-- Topic Network -->
    <section class="mb-32">
      <div class="relative">
        <div class="absolute top-0 left-0 w-full h-full border-2 border-black dark:border-gray-700 rotate-[-1deg]"></div>
        <div class="relative bg-white dark:bg-gray-900 p-8">
          <h2 class="font-mono text-xs uppercase tracking-[0.3em] mb-8">Topic Network</h2>
          <TopicNetwork client:load topics={topics} connections={topicConnections} />
        </div>
      </div>
    </section>

    <!-- Footer -->
    <footer class="border-t-2 border-black dark:border-gray-700 py-8">
      <div class="font-mono text-xs text-center">
        <span class="opacity-70">Published in the depths of the digital underground</span>
      </div>
    </footer>
  </div>
</BaseLayout>