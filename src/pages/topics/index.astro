---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getTopicGroups } from '../../utils/topics';

const topicGroups = await getTopicGroups();
---

<BaseLayout title="Topics">
  <main class="max-w-3xl mx-auto px-4 py-12">
    <h1 class="font-mono text-2xl mb-12">Topics</h1>
    
    <div class="grid gap-12">
      {Object.entries(topicGroups).map(([letter, topics]) => (
        <section>
          <h2 class="font-mono text-xs uppercase tracking-widest mb-6">{letter}</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
            {topics.map(topic => (
              <a href={`/topics/${topic.toLowerCase()}`}
                 class="group flex items-center">
                <span class="font-mono text-sm opacity-70 group-hover:opacity-100 transition-opacity">
                  <span class="mr-2">â†’</span>
                  {topic}
                </span>
              </a>
            ))}
          </div>
        </section>
      ))}
    </div>
  </main>
</BaseLayout>
